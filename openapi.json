{
  "openapi": "3.0.0",
  "info": {
    "title": "WA BOT",
    "version": "1.0.2",
    "description": "API untuk mengelola WhatsApp Bot."
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "parameters": {}
  },
  "paths": {
    "/wa/connect": {
      "get": {
        "tags": [
          "Pairing Device"
        ],
        "summary": "Inisialisasi koneksi WhatsApp (pairing mode)",
        "description": "Memulai sesi WhatsApp baru berdasarkan nomor HP. Hasilnya berisi pesan JSON dan URL menuju halaman QR code untuk proses pairing.",
        "parameters": [
          {
            "name": "phone",
            "in": "query",
            "description": "Nomor WhatsApp lengkap (diawali 62, tanpa +)",
            "required": true,
            "schema": {
              "type": "string",
              "example": "6281234567890"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Berhasil membuat atau melanjutkan sesi WhatsApp",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Sesi WhatsApp untuk 6281234567890 siap. Buka QR di http://localhost:3000/wa/qr/page?phone=6281234567890"
                    },
                    "qr_url": {
                      "type": "string",
                      "example": "http://localhost:3000/wa/qr/page?phone=6281234567890"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Nomor tidak valid atau parameter hilang"
          },
          "500": {
            "description": "Gagal memulai koneksi WhatsApp"
          }
        }
      }
    },
    "/wa/qr/view": {
      "get": {
        "tags": [
          "Pairing Device"
        ],
        "summary": "Ambil gambar QR WhatsApp",
        "description": "Mengembalikan gambar QR code dalam format PNG (berubah setiap beberapa detik).",
        "parameters": [
          {
            "name": "phone",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "6281234567890"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Gambar QR dikembalikan",
            "content": {
              "image/png": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "202": {
            "description": "QR belum tersedia atau sudah kadaluarsa"
          },
          "404": {
            "description": "Sesi belum dibuat"
          }
        }
      }
    },
    "/api/send-messages": {
      "post": {
        "summary": "Kirim pesan WhatsApp (single atau multi)",
        "tags": [
          "WhatsApp"
        ],
        "description": "Gunakan `_botDevice` untuk memilih device tertentu. Jika tidak diberikan, session pertama akan dipakai.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "oneOf": [
                  {
                    "type": "object",
                    "properties": {
                      "_botDevice": {
                        "type": "string",
                        "description": "Device ID / nomor WA"
                      },
                      "jid": {
                        "type": "string",
                        "description": "Nomor WhatsApp tujuan"
                      },
                      "message": {
                        "type": "string",
                        "description": "Isi pesan"
                      }
                    },
                    "required": [
                      "jid",
                      "message"
                    ]
                  },
                  {
                    "type": "object",
                    "properties": {
                      "_botDevice": {
                        "type": "string",
                        "description": "Device ID / nomor WA"
                      },
                      "messages": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "jid": {
                              "type": "string",
                              "description": "Nomor WhatsApp tujuan"
                            },
                            "message": {
                              "type": "string",
                              "description": "Isi pesan"
                            }
                          },
                          "required": [
                            "jid",
                            "message"
                          ]
                        }
                      }
                    },
                    "required": [
                      "messages"
                    ]
                  }
                ]
              },
              "examples": {
                "singleMessage": {
                  "summary": "Kirim satu pesan",
                  "value": {
                    "_botDevice": "6285183148645",
                    "jid": "6285648007953@s.whatsapp.net",
                    "message": "Halo, ini pesan dari bot!"
                  }
                },
                "multiMessage": {
                  "summary": "Kirim banyak pesan sekaligus",
                  "value": {
                    "_botDevice": "6285183148645",
                    "messages": [
                      {
                        "jid": "628564xxxxx@s.whatsapp.net",
                        "message": "Halo, admin, pesan dikirim melalui wa bot!"
                      },
                      {
                        "jid": "628121xxxxxx@s.whatsapp.net",
                        "message": "Halo, yoga, pesan dikirim melalui wa bot!"
                      },
                      {
                        "jid": "6281xxxx@s.whatsapp.net",
                        "message": "Halo, tuan muda, pesan dikirim melalui wa bot!"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Hasil pengiriman pesan per nomor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "results": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "jid": {
                            "type": "string"
                          },
                          "status": {
                            "type": "string",
                            "enum": [
                              "success",
                              "error"
                            ]
                          },
                          "error": {
                            "type": "string",
                            "nullable": true
                          }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "successAll": {
                    "summary": "Semua pesan berhasil",
                    "value": {
                      "results": [
                        {
                          "jid": "628564xxxxx@s.whatsapp.net",
                          "status": "success",
                          "error": null
                        },
                        {
                          "jid": "628121xxxxxx@s.whatsapp.net",
                          "status": "success",
                          "error": null
                        },
                        {
                          "jid": "6281xxxx@s.whatsapp.net",
                          "status": "success",
                          "error": null
                        }
                      ]
                    }
                  },
                  "partialError": {
                    "summary": "Beberapa pesan gagal",
                    "value": {
                      "results": [
                        {
                          "jid": "628564xxxxx@s.whatsapp.net",
                          "status": "success",
                          "error": null
                        },
                        {
                          "jid": "628121xxxxxx@s.whatsapp.net",
                          "status": "error",
                          "error": "Socket WA belum siap"
                        },
                        {
                          "jid": "6281xxxx@s.whatsapp.net",
                          "status": "success",
                          "error": null
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Device tidak ditemukan atau field wajib tidak ada",
            "content": {
              "application/json": {
                "example": {
                  "error": "Device tidak ditemukan"
                }
              }
            }
          },
          "500": {
            "description": "Tidak ada device WA aktif atau socket belum siap",
            "content": {
              "application/json": {
                "example": {
                  "error": "Tidak ada device WA aktif"
                }
              }
            }
          }
        }
      }
    }
  },
  "tags": []
}